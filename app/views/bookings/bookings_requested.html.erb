<div class="container mb-5">
  <h1><span id="title-typed-text" ></span></h1>
    <div class="container">
      <% @bookings_requested.each do |booking_requested| %>
        <div class="card-product col-sm-12">
          <div class="card-img col-sm-3">
            <%= cl_image_tag booking_requested.service.user.photo.key, class:
            "img-fluid rounded-start avatar-square" %>
          </div>
          <div class="card-info col-sm-6 d-flex flex-column justify-content-center">
            <p><i class="fas fa-male p-1"></i><%= booking_requested.service.user.full_name %></p>
            <p><i class="fas fa-calendar-day p-1"></i><%= booking_requested.booking_date.strftime(" %B %d, %Y ") %></p>
            <p><i class="fas fa-apple-alt p-1"></i><%= booking_requested.service.speciality %></p>
            <p><i class="far fa-credit-card"></i>USD <%= booking_requested.service.price %></p>       
          </div>
          <div class="btn col-sm-3">
            <%= link_to "Join meeting", booking_requested.meeting_url, class: 'btn btn-booking ' %>
            <%= link_to "I need to cancel", booking_path(booking_requested),
            method: :delete, data: { confirm: "Are you sure you want to delete this
            booking?" }, class:"btn btn-booking d-flex justify-content-center" %>
          </div>
        </div>
      <% end %>
    </div>
</div>

