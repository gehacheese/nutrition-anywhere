<div class="container">
<div class="mb-3">
      <%= simple_form_for :query, url: services_path, method: "GET", html: {class: 'form-inline search-bar'} do |form|%>
        <div class="form">
          <%= form.input :speciality, label: 'Speciality', label: false, collection: ['Sports', 'Pediatric', 'Vegan', 'Keto',  'Oncology', 'Eating Disorder'], prompt: "All specialities" %>
        </div>
        <div class="form">
          <%= form.input :price, label: 'Max Price', label: false, collection: ['70', '90', '100', '120', '150'], prompt: "Max prices in USD"%>
        </div>
        <div class="form">
          <%= form.input :nationality, label: 'Nutritionist Nationality', label: false, collection: ['Argentinian', 'Chinese', 'Colombian', 'French', 'Italian', 'Portuguese', 'Spanish' ], prompt: "All nationalities" %>
        </div>
        <div class="form">
          <%= form.input :language, label: 'Nutritionist Language', label: false, collection: ['French', 'Italian', 'Mandarin Chinese', 'Portuguese', 'Spanish' ], prompt: "All languages"%>
        </div>
        <div class="form">
          <%= form.submit "Find a nutritionist", class:"btn btn-dark-blue" %>
        </div>
      <%end%> 
  </div>
    <%= render 'slider' %>
  </div>
  
  <br>
            <!----------------Nutri story---------------->

  <section class="transition">
    <div class="blue-line-top"></div>

  <div class="nutri-story">
    <div class="d-flex justify-content-center container-content">
        <div>
          <h2 class="my-5">
          <span style="font-family:Otomanopee One, sans-serif; color:#0030ff">Nutrition</span> as we live today
          </h2>
          <div class='content-home'>
            <p>
              Accessible, confidential and anonymous treatment within the reach of a single click. </p>
            <p>Access the world's largest network of online Nutritionist professionals,
              trained to help you make a real difference in your life.</p>
            <p>You can access your Nutritionist anytime,
              anywhere, from your smartphone or on the web, 100% securely. Welcome to the wonderful world of Nutrition Anywhere! </p>
            </p>
          </div>
        </div>
        <div> 
          <%= image_tag "home", class:'img-home'%>
        </div>
      </div>
    </div>
    <div class="blue-line-bottom"></div>

  </section>
          <!----------------How does it work? ---------------->

  <section class="container how-works">
    <div class= "text-center mb-3">
      <h2>
        How does it work?
      </h2>
    </div>
      <div class="d-flex justify-content-center mb-5">
        <div class="card mr-5 border-0" style="width: 18rem">
        <%= image_tag "boolean-search1", class:"card-img-top card-photo", alt:"Third slide"%>

          <div class="card-body">
            <p class="card-text text-center font-weight-bold title-card mt-3">
              Find the perfect Nutritionist for you
            </p>
          </div>
        </div>
        <div class="card ml-5 border-0" style="width: 18rem">
        <%= image_tag "doctor1", class:"card-img-top card-photo", alt:"Third slide"%>

          <div class="card-body">
            <p class="card-text text-center font-weight-bold title-card mt-3">
             Join the meeting and achieve your goals
            </p>
          </div>
        </div>
      </div>
      <div class='d-flex justify-content-center'>
          <%= link_to "Create Account", new_user_registration_path, class: "btn btn-dark-blue" %>
      </div>
  </section>

    <!----------------Video container---------------->
<div class="video-container">
  <div class="blue-line-top"></div>

    <section class="section container">

      <h2 class="text-center mb-5 mt-5">
        <span style="font-family:Otomanopee One, sans-serif; color:#0030ff">Online clases</span> from our Nutritionists
      </h2>

      <div class="embed-responsive embed-responsive-16by9 mb-5">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/P_wD2zydD_g" allowfullscreen></iframe>
      </div>
    </section>
  <div class="blue-line-bottom-video"></div>
</div>
</div>


