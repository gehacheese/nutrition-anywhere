<div class="container">
<h1> Services </h2>
    <div class="cards" style="display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 16 px">
      <% @services.each do |service| %>
      <div class="card-service-container">
        <div class="card-product" style=" overflow: hidden;
        width: 280px;
        height: 350px;
        margin-bottom: 30px;
        background: white;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;">
          <div class="card-content" style= "padding: 60px;
          text-align: center">
            <div class="card-description">
              <h5><strong><%= service.speciality %></strong></h5>
              <h5 class="card-price">
                <strong>USD<%= service.price %> / per day</strong>
              </h5>
            </div>
            <p id="city"><%= service.location %></p>
            <p>Contact: <%= service.user.full_name %></p>
            <% service.reviews.each do |review| %>
            <p>Review: <%= review.rating %></p>
            <p>Review: <%= review.content %></p>
            <% end %>
            <div class="user-button">
              <h5 class="card-title">
                <%= link_to 'Book Appointment', service_path(service), class:'btn btn-primary'%>
              </h5>
              <div class="user-button-actions">
                <% if policy(service).edit? %> <%= link_to 'Edit Service',
                edit_service_path(service), class:'btn btn-primary' %> <% end %> <% if
                policy(service).destroy? %> <%= link_to 'Delete Service', service_path(service),
                method: :delete, data: { confirm: "Are you sure you want to
                delete this service?"}, class: 'btn btn-primary ' %> <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
      
</div>