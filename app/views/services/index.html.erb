<div class="container">
  <div class="index-title">
    <div style="padding-top: 50px; padding-bottom: 50px">
      <h1 class= "row" style="font-size: 2rem; font-family: 'Nunito', 'Helvetica', 'sans-serif'; font-weight: 500; line-height: 0.5" > Available Services </h1>
      <h1 class= "row" style= "font-weight: bolder; color: #0030ff; font-size: 2rem">for you</h1>
    </div>
     
  </div>
    <div class="cards" style="display: grid; grid-template-columns: 1fr 1fr 1fr; grid-gap: 16 px">
      <% @services.each do |service| %>
      <div class="card-service-container">
        <div class="card-product" style=" overflow: hidden;
        width: 350px;
        height: 520px;
        margin-bottom: 30px;
        background: white;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;">
          <div class="card-content" style= "padding: 50px;
          text-align: center">
            <div class="card-description">
              <h5 style="font-size: 2rem; line-height: 1.2; padding: 15px"><strong><%= service.speciality %></strong></h5>
              <h5 class="card-price">
                <strong>USD<%= service.price %></strong> / per consult
              </h5>
            </div>
            <p style="font-size: 1rem; font-family: 'Nunito', 'Helvetica', 'sans-serif'; font-weight: 500; line-height: 1.2;    padding-top: 5px;
            padding-bottom: 5px; padding-top: 20px">PROFESSIONAL</p>
            <p>Name: <%= service.user.full_name %></p>
            <p>Nationality: <%= service.user.nationality %></p>
            <p>Language: <%= service.user.language %></p>
            <p>Contact: <%= service.user.email %></p>
            <p id="city">Office location: <%= service.location %></p>
            <% service.reviews.each do |review| %>
            <p>Review: <%= review.rating %></p>
            <p>Review: <%= review.content %></p>
            <% end %>
            <div class="user-button" style!="background-color: #0030ff; border-color: #0030ff; color: white;">
              <h5 class="vtn card-title" style="padding: 15px">
                <%= link_to 'Book Appointment', service_path(service), class:'btn btn-primary' %>
              </h5>
              <div class="user-button-actions">
                <% if policy(service).edit? %> <%= link_to 'Edit Service',
                edit_service_path(service), class:'btn btn-primary' %> <% end %> <% if
                policy(service).destroy? %> <%= link_to 'Delete Service', service_path(service),
                method: :delete, data: { confirm: "Are you sure you want to
                delete this service?"}, class: 'btn btn-primary ' %> <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
      
</div>