<div class="container">
<h1 style="font-size: 2rem; font-family: 'Nunito', 'Helvetica', 'sans-serif'; font-weight: 500; line-height: 1.2;    padding-top: 50px;
padding-bottom: 50px;"> Available Services for you </h1>
<div class="search-bar py-5 d-flex justify-content-center">
  <%= simple_form_for :search, url: services_path, method: "GET", html: { class: 'form-inline' }  do |form| %>
        <div>
        <%= form.input :speciality, label: 'Speciality' , collection: ['Sports Nutritionism', 'Pediatric Nutritionism', 'Vegan Nutritionism', 'Keto Nutritionism',  'Oncology Nutritionism', 'Eating Disorder Nutritionism'],  placeholder: 'Choose an option or leave this filter for now' %>
        </div>
        <div>
        <%= form.input :price, label: 'Price', collection: ['70', '90', '100', '120', '150'], placeholder: 'EUR per one-hour consultation' %>
        </div>
        <div>
        <%= form.input :nationality, label: 'Nutritionist Nationality', collection: ['Argentinian', 'Spanish', 'French', 'Italian', 'Portuguese', 'Chinese'] %>
        </div>
        <div>
        <%= form.input :language, label: 'Nutritionist Language', collection: ['Spanish', 'French', 'Italian', 'Portuguese', 'Mandarin Chinese'] %>
        </div>
        <div>
        
        <%= form.submit "Find a nutritionist", class: 'btn btn-primary' %>
        </div>
  <%end%>
</div>
    <div class="cards" style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr; grid-gap: 16 px">
      <% @services.each do |service| %>
      <div class="card-service-container">
        <div class="card-product" style=" overflow: hidden;
        width: 280px;
        height: 350px;
        margin-bottom: 30px;
        background: white;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;">
          <div class="card-content" style= "padding: 60px;
          text-align: center">
            <div class="card-description">
              <h5><strong><%= service.speciality %></strong></h5>
              <h5 class="card-price">
                <strong>USD<%= service.price %> / per consult</strong>
              </h5>
            </div>
            <p id="city">Office location: <%= service.location %></p>
            <p>Contact: <%= service.user.full_name %></p>
            <% service.reviews.each do |review| %>
            <p>Review: <%= review.rating %></p>
            <p>Review: <%= review.content %></p>
            <% end %>
            <div class="user-button" style!="background-color: #0030ff; border-color: #0030ff; color: white;">
              <h5 class="card-title">
                <%= link_to 'Book Appointment', service_path(service), class:'btn btn-primary' %>
              </h5>
              <div class="user-button-actions">
                <% if policy(service).edit? %> <%= link_to 'Edit Service',
                edit_service_path(service), class:'btn btn-primary' %> <% end %> <% if
                policy(service).destroy? %> <%= link_to 'Delete Service', service_path(service),
                method: :delete, data: { confirm: "Are you sure you want to
                delete this service?"}, class: 'btn btn-primary ' %> <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
      
</div>