<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-img pl-0">
<div class ="d-flex align-items-center">
  <%= link_to root_path, class: "nav-link nav-logo pr-0" do %>
    <%= image_tag "logo-nutrition.png", class:"style-img"%>
  <% end %>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <h4 style="font-family: 'Otomanopee One', sans-serif; color: #0030ff">
      Nutrition Anywhere
    </h4>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto pl-3 pr-3">
         <li class="nav-item">
        </li>  
      <% if user_signed_in? %>
       <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
      <li class="nav-item">
            <%= link_to "Services", services_path, class: "nav-link" %>
          </li>
        <li class= "nav-item dropdow">
           <li class="nav-item dropdown ml-3">
           <% if current_user&.photo.present? %>
             <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
           <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
    
          <% if current_user.nutritionist? %>
          <%= link_to "Post a Service", new_service_path, class: "nav-link" %>
          <%= link_to "My Bookings", bookings_given_path(), class: "nav-link" %>
          <%= link_to "Edit", edit_user_registration_path, class: "nav-link" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          <% else %>
          <%= link_to "My Bookings", bookings_requested_path, class: "nav-link" %>
          <%= link_to "Edit", edit_user_registration_path, class: "nav-link" %>

          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
          <% end %>
        </div>
        <% else %>
        <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn-login" %>
          </li>
        <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn-signup" %>
          </li>
        <% end %>      

      </li>
    </ul>
  </div>
</div>